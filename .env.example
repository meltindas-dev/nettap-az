# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_TYPE=postgres # Options: 'postgres', 'sheets', 'memory'

# PostgreSQL Configuration (if DATABASE_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nettap
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Google Sheets Configuration (if DATABASE_TYPE=sheets)
GOOGLE_SHEETS_ID=your_sheet_id
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account",...}
GOOGLE_SHEETS_API_KEY=your_api_key

# JWT Authentication (REQUIRED in production)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Notification Providers (Optional - use mock providers if not set)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@nettap.az

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@nettap.az

# Logging
LOG_LEVEL=info # Options: debug, info, warn, error
