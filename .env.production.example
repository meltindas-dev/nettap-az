# Production Environment Configuration
# Copy this to .env.production and fill in with actual values

NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_TYPE=postgres

# PostgreSQL (Production)
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=nettap_production
POSTGRES_USER=nettap_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Authentication (CRITICAL - Change these!)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_256_BIT_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Notification Providers (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@nettap.az
